<script type="text/javascript">
    new Fora.Views.Forums.Item("{{forum.stub}}");
</script>
<div class="columns-wrap">
    <div class="content-area">    
        <h1>{{forum.name}}</h1>
        {{#if message}}
        <div class="content-sections">
            <div class="normal">
                {{{message}}}
            </div>
        </div>
        {{/if}}
        <div class="nav alt">
            <ul>
                <li class="selected">
                    Recommended
                </li>
                <li>
                    <a href="/{{forum.stub}}/latest">Upcoming</a>
                </li>            
                <li>
                    <a href="/{{forum.stub}}/about">About</a>
                </li>          
            </ul>
            {{#if user}}
            <ul class="alt buttons">
                {{#unless options.isMember}}
                <li>
                    <a href="#" class="positive join-forum"><i class="icon-user"></i>Join Forum</a>
                </li>
                {{else}}
                <li>
                    <a href="#" class="positive"><i class="icon-plus"></i>New {{options.primaryPostType}}</a>
                </li>
                {{/unless}}
            </ul>
            {{/if}}
        </div>
        {{#if posts}}
            <ul class="cards">
            {{#each posts}}
                {{> postcard summary}}
            {{/each}}
            </ul>
        {{/if}}   
    </div>
</div>

