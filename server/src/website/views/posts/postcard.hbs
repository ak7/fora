<li class="{{view}}" data-url="/{{forum.stub}}/{{stub}}">
    <div class="item-wrap">
        {{#if image}} 
        <div class="image" style="background-image:url({{image}})"></div>
        {{/if}}
        <div class="content-wrap">
            <div class="content">
                <h2><a href="/{{forum.stub}}/{{stub}}">{{title}}</a></h2>
                {{{content}}}
            </div>
            <div class="overlay"></div>
            <span class="activity">
                <i class="icon-comment"></i> 93<br />
                <i class="icon-thumbs-up-alt"></i> 10k
            </span>
            <p class="desc-text">
                <span class="text">
                    <a href="/~{{createdBy.username}}">{{createdBy.name}}</a><br />
                    <span class="light-text">in <a href="/{{forum.stub}}">{{forum.name}}</a></span>
                </span>
            </p>
        </div>
    </div>
</li>

