<li class="{{view}}" data-url="/{{forum.stub}}/{{stub}}">
    <div class="item-wrap">
        {{#if image}} 
        <div class="image" style="background-image:url({{image}})"></div>
        {{/if}}
        <div class="content-wrap">
            <div class="content">
                <h2><a href="/{{forum.stub}}/{{stub}}">{{title}}</a></h2>
                <p class="subheading">in <a href="/{{forum.stub}}">{{forum.name}}</a></p>
                {{{content}}}
            </div>
            <div class="overlay"></div>
            <span class="activity">
                <i class="icon-comment"></i> 93<br />
                <i class="icon-thumbs-up-alt"></i> 10k
            </span>
            <p class="iconic-text">
                <img src="{{createdBy.assetPath}}/{{createdBy.username}}_t.jpg" alt="{{createdBy.name}}" />
                <span class="text">
                    <a href="/~{{createdBy.username}}">{{createdBy.name}}</a>        
                </span>
            </p>
        </div>
    </div>
</li>

